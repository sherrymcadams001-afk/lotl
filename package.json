  "main": "lotl-controller-v3.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "set PATH=%PATH%;%ProgramFiles%\\nodejs;%ProgramFiles(x86)%\\nodejs&& node lotl-controller-v3.js",
    "start:local": "set PATH=%PATH%;%ProgramFiles%\\nodejs;%ProgramFiles(x86)%\\nodejs&& set HOST=127.0.0.1&& node lotl-controller-v3.js",
    "start:lan": "set PATH=%PATH%;%ProgramFiles%\\nodejs;%ProgramFiles(x86)%\\nodejs&& set HOST=0.0.0.0&& node lotl-controller-v3.js",
    "launch-chrome": "start chrome.exe --remote-debugging-port=9222 --user-data-dir=C:\\temp\\chrome-lotl"
  },
  "keywords": [
    "puppeteer",
    "automation",
    "gemini",
    "chatgpt",
    "ai"
  ],
